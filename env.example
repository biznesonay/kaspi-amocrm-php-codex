APP_ENV=prod
# DB: mysql (MariaDB 10.6) or pgsql (PostgreSQL 9.2)
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=kaspi_amocrm
DB_USER=username
DB_PASS=password

# Kaspi Shop API
KASPI_API_BASE=https://kaspi.kz/shop/api/v2
KASPI_API_TOKEN=put_kaspi_api_token_here

# amoCRM OAuth & API
AMO_SUBDOMAIN=your_subdomain # e.g. example for https://example.amocrm.ru
AMO_CLIENT_ID=your_client_id
AMO_CLIENT_SECRET=your_client_secret
AMO_REDIRECT_URI=https://yourdomain.tld/oauth_callback.php

# (Optional bootstrap) paste initial tokens after first auth
AMO_ACCESS_TOKEN=
AMO_REFRESH_TOKEN=
AMO_EXPIRES_AT=0

# Mapping
AMO_PIPELINE_ID=0
AMO_STATUS_ID=0
AMO_RESPONSIBLE_USER_ID=0
AMO_CATALOG_ID=0
AMO_LEAD_ORDER_CODE_FIELD_ID=0  # optional custom field for order code on leads
AMO_CONTACT_ADDRESS_FIELD_ID=0   # optional custom field for contact address
AMO_LEAD_DELIVERY_ADDRESS_FIELD_ID=0  # optional custom field for lead delivery address
AMO_LEAD_ORDER_DATE_FIELD_ID=0  # optional custom field for lead order date

DEFAULT_COUNTRY=KZ

# Security for web cron & migrate endpoints
CRON_SECRET=change_this_strong_random
